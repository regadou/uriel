#!/usr/bin/env uriel

put beat song
    "a beat"
    60
    track map
        channel 1
        instrument "xylophone"
        sounds list
           1 c4 .5 1
           2 e4 .5 .8
           3 g4 .5 .6
           4 e4 .9 .8
        end list
    end map
end song
do beat loops loop 4
print "playing song " beat " ..."
do beat play true

